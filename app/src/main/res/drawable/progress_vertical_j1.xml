progress_vertical.xml<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:centerY="0.5"
                android:endColor= "@color/blanc"
                android:startColor="@color/blanc"/><!--start "#838383" end "#ABABAB"-->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip
            android:clipOrientation="vertical"
            android:gravity="bottom">
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="90"
                    android:endColor="@color/vert"
                    android:centerColor="@color/orange"
                    android:startColor="@color/rouge" /><!--start #213e8f end #FF0000-->
            </shape>
        </clip>
    </item>
</layer-list>