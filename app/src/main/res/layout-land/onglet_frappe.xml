<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mesurez votre frappe"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:id="@+id/titre_frappe"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:shadowColor="@android:color/black"
            android:shadowRadius="1"
            />

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Appareil disponible"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:id="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/titre_frappe"/>


        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewAppareils"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:choiceMode="singleChoice"
            android:layout_below="@+id/textView"
            />

        <Button
            android:id="@+id/frapper_btn"

            android:text="Frapper"
            android:textColor="#FFFFFF"
            android:textSize="30sp"

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/choixboutonfrapper"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/listViewAppareils"/>
