<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_force"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/layout_vitesse"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="0N"
                    android:id="@+id/forceVal"
                    android:textColor="@android:color/black"
                    android:gravity="center_horizontal" />
                <ProgressBar
                    style="@style/ProgressBar.Vertical"
                    android:layout_width="40dp"
                    android:layout_height="300dp"
                    android:id="@+id/force"
                    android:max="100"
                    android:progress="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="0N"
                    android:id="@+id/force2Val"
                    android:textColor="@android:color/black"
                    android:gravity="center_horizontal" />
                <ProgressBar
                    style="@style/ProgressBar.Vertical"
                    android:layout_width="40dp"
                    android:layout_height="300dp"
                    android:id="@+id/force2"
                    android:max="100"
                    android:progress="0"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="0N"
                    android:id="@+id/force3Val"
                    android:textColor="@android:color/black"
                    android:gravity="center_horizontal" />
                <ProgressBar
                    style="@style/ProgressBar.Vertical"
                    android:layout_width="40dp"
                    android:layout_height="300dp"
                    android:id="@+id/force3"
                    android:max="100"
                    android:progress="0" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Force"
            android:textColor="@android:color/black"
            android:textSize="50sp"
            android:id="@+id/Force" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_vitesse"
        android:layout_alignTop="@+id/layout_force"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="0m/s"
                    android:id="@+id/vitVal"
                    android:textColor="@android:color/black"
                    android:gravity="center_horizontal" />
                <ProgressBar
                    style="@style/ProgressBar.Vertical"
                    android:layout_width="40dp"
                    android:layout_height="300dp"
                    android:id="@+id/vit"
                    android:max="100"
                    android:progress="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="0m/s"
                    android:id="@+id/vit2Val"
                    android:textColor="@android:color/black"
                    android:gravity="center_horizontal" />
                <ProgressBar
                    style="@style/ProgressBar.Vertical"
                    android:layout_width="40dp"
                    android:layout_height="300dp"
                    android:id="@+id/vit2"
                    android:max="100"
                    android:progress="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="0m/s"
                    android:id="@+id/vit3Val"
                    android:textColor="@android:color/black"
                    android:gravity="center_horizontal" />
                <ProgressBar
                    style="@style/ProgressBar.Vertical"
                    android:layout_width="40dp"
                    android:layout_height="300dp"
                    android:id="@+id/vit3"
                    android:max="100"
                    android:progress="0" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Vitesse"
            android:textColor="@android:color/black"
            android:textSize="50sp"
            android:id="@+id/Vitesse" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_puissance"
        android:orientation="vertical"
        android:layout_alignTop="@+id/layout_vitesse"
        android:layout_toRightOf="@id/layout_vitesse"
        android:layout_marginLeft="50dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="0W"
                    android:id="@+id/puissVal"
                    android:textColor="@android:color/black"
                    android:gravity="center_horizontal" />
                <ProgressBar
                    style="@style/ProgressBar.Vertical"
                    android:layout_width="40dp"
                    android:layout_height="300dp"
                    android:id="@+id/puiss"
                    android:max="100"
                    android:progress="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="0W"
                    android:id="@+id/puiss2Val"
                    android:textColor="@android:color/black"
                    android:gravity="center_horizontal" />
                <ProgressBar
                    style="@style/ProgressBar.Vertical"
                    android:layout_width="40dp"
                    android:layout_height="300dp"
                    android:id="@+id/puiss2"
                    android:max="100"
                    android:progress="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="0W"
                    android:id="@+id/puiss3Val"
                    android:textColor="@android:color/black"
                    android:gravity="center_horizontal" />
                <ProgressBar
                    style="@style/ProgressBar.Vertical"
                    android:layout_width="40dp"
                    android:layout_height="300dp"
                    android:id="@+id/puiss3"
                    android:max="100"
                    android:progress="0" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Puissance"
            android:textColor="@android:color/black"
            android:textSize="50sp"
            android:id="@+id/Puissance" />
    </LinearLayout>

    <ImageView
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:id="@+id/cible"
        android:layout_gravity="center"
        android:src="@drawable/cible"
        android:layout_above="@+id/vert"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/impact"
        android:src="@drawable/impact"
        android:layout_alignTop="@+id/cible"
        android:layout_alignLeft="@+id/cible"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/impact2"
        android:src="@drawable/impact"
        android:layout_alignTop="@+id/cible"
        android:layout_alignLeft="@+id/cible"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/impact3"
        android:src="@drawable/impact"
        android:layout_alignTop="@+id/cible"
        android:layout_alignLeft="@+id/cible"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rouge"
        android:layout_gravity="right"
        android:src="@drawable/rouge"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/cible"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vert"
        android:layout_gravity="right"
        android:src="@drawable/vert"
        android:layout_toRightOf="@id/cible"
        android:layout_above="@+id/rouge"/>

</RelativeLayout>